#include <stdio.h>

void pyramid(int n)
{
    for (int i = 0; i < n+1; i++)
    {
        for (int j = 0; j < n-i; j++)
        {
            printf(" ");
        }
        for (int k = 0; k < i*2-1; k++)
        {
            printf("*");
        }
        printf("\n");
    }
}

int main()
{
    int n;
    scanf("%d", &n);
    pyramid(n);
    return 0;
}
